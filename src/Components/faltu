import React, { useState } from "react";
import { FaWifi, FaShoppingBag, FaMobileAlt, FaGamepad, FaMicrophone } from "react-icons/fa";

const categories = [
  {
    name: "Wi-Fi",
    icon: <FaWifi className="text-yellow-500 text-3xl" />,
    description: "Fast and reliable internet with speeds up to 1Gbps.",
    price: "$30/month",
  },
  {
    name: "Home Appliances",
    icon: <FaShoppingBag className="text-yellow-500 text-3xl" />,
    description: "Latest home appliances with energy-efficient technology.",
    price: "Starting at $100",
  },
  {
    name: "Mobile & PC",
    icon: <FaMobileAlt className="text-yellow-500 text-3xl" />,
    description: "Top-rated mobile and PC devices at the best prices.",
    price: "Starting at $200",
  },
  {
    name: "Gaming Consoles",
    icon: <FaGamepad className="text-yellow-500 text-3xl" />,
    description: "Next-gen gaming consoles with immersive experiences.",
    price: "$400",
  },
  {
    name: "Audio & Microphone",
    icon: <FaMicrophone className="text-yellow-500 text-3xl" />,
    description: "High-quality audio and microphone devices for professionals.",
    price: "Starting at $50",
  },
];

export default function ServiceCategories() {
  const [selectedCategory, setSelectedCategory] = useState(null);

  return (
    <div className="max-w-5xl mx-auto p-6">
      <h2 className="text-2xl font-bold mb-6">Top Categories</h2>
      <div className="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6 text-center">
        {categories.map((category) => (
          <div key={category.name} className="w-full">
            <div
              className="flex flex-col items-center p-4 bg-gray-100 rounded-xl hover:shadow-lg transition cursor-pointer"
              onClick={() => setSelectedCategory(selectedCategory === category ? null : category)}
            >
              {category.icon}
              <span className="text-sm font-medium mt-2">{category.name}</span>
            </div>

            {/* Inline Modal (Only inside category section) */}
            {selectedCategory === category && (
              <div className="mt-2 bg-white p-4 shadow-md rounded-lg border">
                <h2 className="text-lg font-bold">{category.name}</h2>
                <p className="text-gray-600">{category.description}</p>
                <p className="font-semibold mt-2">
                  Price: <span className="text-yellow-500">{category.price}</span>
                </p>
                
                <div className="flex gap-3 mt-4">
                  <button
                    className="px-4 py-2 bg-[#fbc800] text-white rounded-lg hover:bg-yellow-600 transition"
                    onClick={() => alert(`Booking ${category.name}...`)}
                  >
                    Book
                  </button>
                  <button
                    className="px-3 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-700 transition"
                    onClick={() => setSelectedCategory(null)}
                  >
                    Close
                  </button>
                </div>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  );
}
